{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "cacheDir": ".turbo",
  "globalDependencies": ["**/.env.*local", "pnpm-lock.yaml"],
  "globalEnv": ["SERVER_URI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
